<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
        <RelativeLayout style="@style/title_bar_layout" >
            <ImageView
                android:id="@id/title_bar_showleft"
                style="@style/title_bar_leftimage"
                android:contentDescription="@string/none"
                android:src="@drawable/my_back_normal" />
            <TextView
                android:id="@id/title_bar_user_login"
                style="@style/title_bar_title"
                android:text="@string/user_register_enterprise" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register_count"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/user_register_count_hint"
                style="@style/MMLineEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/user_register_count_hint"
                android:maxLength="20" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register_passwd"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/user_register_passwd_hint"
                style="@style/MMLineEditPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/user_register_passwd_hint"
                android:inputType="textPassword"
                android:maxLength="20" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register_passwd_confirm"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/user_register_passwd_confirm_hint"
                style="@style/MMLineEditPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/user_register_passwd_confirm_hint"
                android:inputType="textPassword"
                android:maxLength="20" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >
            <TextView
                android:id="@+id/reg_pro_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register_passwd_protect1"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register_passwd_protect2"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/user_register_passwd_an"
                style="@style/MMLineEditPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/user_register_passwd_pro1"
                android:maxLength="20" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:padding="5dp" >
            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register_agree"
                android:textColor="#0000ff"
                android:textSize="16sp" />
        </LinearLayout>
        <Button
            android:id="@+id/user_register_ok"
            style="@style/MMLineActionButton"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style_one"
            android:padding="5dp"
            android:text="@string/user_register_button" />
    </LinearLayout>
</ScrollView>