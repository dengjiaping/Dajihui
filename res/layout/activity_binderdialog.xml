<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:text="@string/binder_dialog_intro" />
    <LinearLayout
        style="@style/MMLineEditText"
        android:background="@drawable/login_input"
        android:orientation="horizontal" >
        <TextView
            style="@style/MMLineEditText"
            android:layout_width="wrap_content"
            android:background="@null"
            android:minWidth="50.0dip"
            android:text="@string/user_login_username"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/user_login_username_hint"
            style="@style/MMLineEditText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/user_login_username_hint" />
    </LinearLayout>
    <LinearLayout
        style="@style/MMLineEditText"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/login_input"
        android:orientation="horizontal" >
        <TextView
            style="@style/MMLineEditText"
            android:layout_width="wrap_content"
            android:background="@null"
            android:minWidth="50.0dip"
            android:text="@string/user_login_password"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/user_login_password_hint"
            style="@style/MMLineEditPass"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/user_login_password_hint" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/binder_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/menu_single_item"
            android:text="@string/binder_btn_ok"
            android:textColor="#222222"
            android:textSize="18sp" />
        <Button
            android:id="@+id/binder_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/menu_single_item"
            android:text="@string/binder_btn_cancel"
            android:textColor="#222222"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>